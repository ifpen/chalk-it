{
  "lib": ["es2022"],
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "src",
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
